@import "mixins/helpers"
@import "mixins/variables"

html, body
  height 100%

body
  font-family "Trebuchet MS", Verdana, Arial, Helvetica, sans-serif
  font-size 12px
  color $text-color

input, textarea, button, select
  font-family: "Trebuchet MS", Verdana, Arial, Helvetica, sans-serif
  font-size 12px
  vertical-align middle

a
  color $text-color
  text-decoration underline
  &:hover, &:focus
    text-decoration none

p, h1, h2, h3, h4, td
  img
    vertical-align middle

.b-admin-container
  min-height 100%
  position relative

.b-admin-container.login, .b-admin-container.logout
  background #eee

  .b-admin-body
    position absolute
    top 50%
    left 50%
    display table-cell
    vertical-align middle

.b-admin-header
  position relative
  height 42px
  background url('../images/header-bg.png') bottom left repeat-x
  border-bottom 1px solid #e89e00
  box-shadow 0 1px 8px

.b-admin-header-logo
  display block
  float left
  width 150px
  height 42px
  background url('../images/logo.png') center center no-repeat

.b-admin-usermenu
  float right
  text-align right
  padding-top 8px
  color #bf7900
  font-weight bold
  text-shadow #fff 0 1px 1px
  overflow hidden

  .section
    display block
    float left
    padding 0 15px
    height 34px
    line-height 34px
    background url('../images/menu-sep.png') bottom right no-repeat
    margin-right -1px

  .section-link
    color #587373
    text-decoration none

    &:hover, &:focus
      color #587373
      text-decoration underline

.b-admin-menu
  display block
  float left
  margin-top 8px
  margin-left 0
  padding-right 1px
  color #587373
  font-weight bold
  text-shadow #fff 0 1px 1px
  list-style-type none
  background url('../images/menu-sep.png') bottom right no-repeat

  .section
    display block
    float left

    &:hover
      .section-title
        color #bf7900

      .section-menu
        display block

  .section-title
    display block
    padding 0 15px
    line-height 34px
    height 34px
    background url('../images/menu-sep.png') bottom left no-repeat
    cursor pointer

  .section-menu
    display none
    position absolute
    margin-left 0
    z-index 10
    padding 8px 0
    list-style-type none
    background url('../images/menu-bg.png')
    border 1px solid #e89e00
    border-top none
    border-bottom-radius 3px

  .item
    float none

  .item-link
    padding 0 15px
    line-height 32px

  .section-link, .item-link
    display block
    text-decoration none
    color #587373

    &:hover
      color #bf7900

.b-admin-menu-helper
  display none
  position absolute
  top 42px
  height 1px
  background #e89e00
  z-index 11

.b-admin-body
  position relative
  padding-bottom 74px
  ul.tools
    position absolute
    display block
    top 13px
    right 30px
    margin-left 0
    list-style-type none
    li
      display block
      float left
      margin-left 10px
    a
      color #587373
      padding 0 12px
      display block
      border 1px solid #e89e00
      border-radius 3px
      gradient #ffd152 #ffedbd
      -webkit-box-shadow 0 1px 2px #e5e5e5, #fff 0 1px 1px inset
      text-shadow #fff 0 1px 1px
      text-decoration none
      font-weight bold
      height 24px
      line-height 24px
      &:hover
        color #587373
        gradient lighten(#ffd152, 10%) lighten(#ffedbd, 10%)
  p.success
    border 1px solid $border-color
    background $background-color
    font-weight bold
    color #007042
  ul.messagelist
    display block
    margin 5px 30px 0
    padding 10px 15px
    color $text-color
    background $background-lighter-color
    border 1px solid darken($background-lighter-color, 20%)
    border-radius 3px
    li
      margin-left 15px
  div.errornote
    margin 5px 30px 0
    padding 10px 15px
    color: #a00
    border 1px solid darken(#f3bcbe, 20%)
    background #f3bcbe
    border-radius 3px

.b-admin-title
  font-size 20px
  font-weight normal
  margin 20px 30px 0

#login, #logout
  position absolute
  top 0
  left 0
  background #ffd56d url('../images/login-bg.png') top left repeat-y
  width 336px
  height 250px
  margin-left -168px
  margin-top -144px

#login-logo, #logout-logo
  float left
  width 170px
  height 55px
  background url('../images/login-logo.png') top left no-repeat

#login-header, #logout-header
  float left
  width 166px
  height 55px
  background url('../images/login-header.png') top left no-repeat
  text-align center
  div
    padding-top 11px
    text-shadow #fff 0 1px 1px
  p
    line-height 14px
  a
    font-weight bold

#login form, #logout-message
  clear both
  height 195px
  background url('../images/login-footer.png') bottom left no-repeat

#login form .fields
  clear both
  padding-top 25px
  position relative

#login form
  &.field, &.submit
    clear both
    margin-top 10px
    margin-left 30px

#login form
  &.field, &.submit
    label
      display block
      margin-bottom 5px

#login form .field input
  width 170px
  vertical-align middle

#login form .submit input
  vertical-align middle

#login .errornote
  margin -20px 20px 5px
  text-align center
  color #a00

#company-logo
  display block
  position absolute
  bottom 37px
  right 20px

#logout-message p
  padding 50px 30px 0
  text-align center

.delete-confirmation
  margin 10px 20px 20px
  padding 15px
  border 1px solid $border-color
  background $background-color
  ul
    margin 5px 20px

.main-buttons
  margin 0 30px
  input
    margin-left 5px
    float right

.second-buttons button
  float left
  margin-right 5px

.b-admin-footer
  position absolute
  bottom 0
  width 100%
  height 44px

  .copyright
    margin 0 100px
    border-top 1px solid #f0f0f0
    font-style italic
    text-align center
    color #ccc
    line-height 43px
  .copyright-link
    color #ccc

#content-main
  margin 0 30px
  width 500px

#content-main div.module
  border 1px solid $border-color
  border-top-radius 3px
  margin 10px 0 20px
  table
    caption
      background $background-color
      border-bottom 1px solid $border-color
      border-top-radius 3px
      padding 10px
      text-align left
      font-weight bold
      text-shadow #fff 0 1px 1px
      gradient $background-color #fff
      color $text-color
    td, th
      text-align left
      padding 10px
      border-bottom 1px solid $changelist-border-color
      background $changelist-background-color
    td
      width 1%
    th a
      font-weight bold
      text-decoration none
    tr.last
      td, th
        border-bottom none

.b-admin-breadcrumbs
  display block
  margin 10px 30px -10px 20px
  list-style-type none
  color #aaa
  font-size 11px

  .item
    margin-left 5px
    display block
    float left

  .item-title
    margin-left 5px

  .item-link
    margin-left 5px
    color #aaa

    &:hover
      color #aaa
      text-decoration underline

#login-form
  padding 0 0 0 30px
  label
    padding 10px 0 5px
    display block
  .submit
    padding-top 10px
