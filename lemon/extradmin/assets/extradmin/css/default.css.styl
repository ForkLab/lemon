@import "mixins/helpers"
@import "mixins/variables"

.clearfix:before, .clearfix:after
  content ""
  display table

.clearfix:after
  clear both

.clearfix
  zoom 1

label
  font-weight bold

fieldset
  border 1px solid #ccc

legend
  font-weight bold

input[type=text], input[type=password], textarea
  margin 0
  padding 4px 8px

input[type=submit], input[type=button], button, select
  margin 0

input.default[type=submit], input.default[type=button]
  float right
  margin-left 5px

input[type=text], input[type=password], input.text, input.title, textarea
  vertical-align baseline
  background #fff
  border 1px solid #96aab1
  border-top 1px solid #6a787d
  border-radius 2px
  -webkit-box-shadow #e0e0e0 0 1px 2px inset

.button
  padding 6px 12px
  color #486A77
  font-weight bold
  background #d8d8d8
  gradient darken($background-color, 10%) $background-color
  border 1px solid darken($border-color, 10%)
  border-radius 3px
  -webkit-box-shadow 0 1px 2px #e5e5e5, #fff 0 1px 1px inset
  text-shadow #fff 0 1px 1px
  &:hover
    background lighten(#d8d8d8, 10%)
    gradient darken($background-color, 5%), lighten($background-color, 5%)

.delete_button
  color #fff
  gradient darken(#f3bcbe, 40%), darken(#f3bcbe, 20%)
  -webkit-box-shadow 0 1px 2px #f3bcbe, #f3bcbe 0 1px 1px inset
  text-shadow darken(#f3bcbe, 60%) 0 -1px -1px
  border 1px solid darken(#f3bcbe, 40%)
  &:hover
    background darken(#f3bcbe, 30%)
    gradient darken(#f3bcbe, 40%), darken(#f3bcbe, 30%)

div.datetime
  margin-left 160px
  span.date
    margin-bottom 5px
  span.date, span.time
    display block
