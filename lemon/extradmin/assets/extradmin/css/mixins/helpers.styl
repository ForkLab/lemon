gradient(from, to)
  background -webkit-gradient(linear, left bottom, left top, color-stop(0%, from), color-stop(100%, to))
  background -moz-linear-gradient(center bottom, from 0%, to 100%)
  background -o-linear-gradient(bottom, from 0%, to 100%)
  background -ms-linear-gradient(bottom, from 0%,to 100%)
  background linear-gradient(center bottom, from 0%, to 100%)

  // HACK: Stylus always converts #rrggbb to #rgb if possible,
  // but filter requires #rrggbb format.
  if from == #fff
    from = unquote('#ffffff')
  if to == #fff
    to = unquote('#ffffff')

  filter "progid:DXImageTransform.Microsoft.gradient(GradientType=0, startColorstr='%s', endColorstr='%s')" % (to from)
